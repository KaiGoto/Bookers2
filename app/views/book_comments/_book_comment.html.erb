<table>
  <thead></thead>
    <tr>
       <% book.book_comments.each do |book_comment| %>
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <br>
          <%= link_to book_comment.user.name %>
      </td>
      <dr>
      <td>
        <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to 'Destroy', book_book_comment_path(book.id,book_comment.id), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<div class="new-comment">
  <%= form_with(model:[book, book_comment], remote: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <br><%= f.submit "送信" %>
  <% end %>
</div>