<div class='col-md-3'>
    <%= render 'books/list', user: @book_show.user, book: @book %>
</div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
       <thead></thead>
        <tbody>
          <tr>
              <td>
                <%= link_to user_path(@book_show.user) do %>
                 <%= attachment_image_tag @book_show.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                 <br><%= @book_show.user.name %>
                <% end %>
              </td>
              <td>
                 <%=link_to @book_show.title, book_path(@book_show) %>
              </td>
              <td>
                <%= @book_show.body %>
              </td>
              <% if @book_show.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book_show), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', @book_show, method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger" %>
                </td>
              <% end %>
              <% if @book_show.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book_show), method: :delete do %>
                  ♥<%= @book_show.favorites.count %> いいね
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to book_favorites_path(@book_show), method: :post do %>
                  ♡<%= @book_show.favorites.count %> 
                <% end %>
              </td>
                <div class="comments">
                  <td>コメント件数：<%= @book_show.book_comments.count %></td>
                    <% @book.book_comments.each do |book_comment| %>
                  <td><%= image_tag('no_image.jpg') %></td>
                    <%= book_comment.user.name %>
                    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
                   <% if post_comment.user == current_user %>
                  <div class="comment-delete">
                    <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete %>
                  </div>
                  <% end %>
                 <% end %>
                </div>
             <% end %>
          </tr>
        </tbody>
      </table>
      <table>
        <thead></thead>
          <tr>
            <% @book_show.book_comments.each do |book_comment| %>
            <td>
               <%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <br>
                <%= link_to book_comment.user.name %>
            </td>
            <dr>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
              <% if book_comment.user == current_user %>
                <%= link_to 'Destroy', book_book_comment_path(book_comment.id), method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
           <% end %>
      </table>

      <div class="new-comment">
              <%= form_with(model:[@book_show, @book_comment], local: true) do |f| %>
              <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
              <br><%= f.submit "送信" %>
             <% end %>
      </div>
    </div>