<!--<div class='container'>-->
  <div class='row'>
    <div class='col-md-12'>
      <h2>Follow Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <%= form_with model: @user,url:'follow', local:true do |f| %>
            <% @user.following_user.each do |user| %>
          <tr>
            <th>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </th>
            <th>
              <%= user.name %>
            </th>
            <th>
              フォロー数<%= user.followed.count %>
            </th>
            <th>
              フォロワー数<%= user.follower.count %>
            </th>
            <th>
              <%= link_to "Show",user_path(user.id) %>
            </th>
          </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    
  </div>
